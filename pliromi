<script>
function myFunction() {

  document.getElementById("field2").value = document.getElementById("field1").value;
  document.getElementById("field3").value = document.getElementById("field1").value*14.50;
  document.getElementById("field4").value = Number(field2.value)+Number(field3.value);
  field4.style.color = 'red';
}
